block main
    .row
        .col.right
            h1 Settings
        .col
            .cards
                .card
                    .card-body
                        p
                            img(width=128 height=128 src=user.profile)
                        p
                            label USERNAME&nbsp;/&nbsp;
                            span= user.username
                        p
                            label EMAIL&nbsp;/&nbsp;
                            span= user.email
                        p
                            label FIRSTNAME&nbsp;/&nbsp;
                            span= user.firstname
                        p
                            label LASTNAME&nbsp;/&nbsp;
                            span= user.lastname

                    .card-footer
                        button.outline EDIT SETTINGS
